<h1 class="page-title">Issue Assignments</h1>

<div class="page-notes">
  <div>Notes:</div>
  <ul>
      <li>This is the composite entity for the many to many relationship between the issues and developers tables.</li>
  </ul> 
</div>

<div class="d-flex justify-content-between">
  {{!-- Handlebars call to add_project_modal.hbs partial --}}
  {{> add_issue_assignment_modal}}

  {{!-- Handlebars call to delete_project_modal.hbs partial --}}
  {{> delete_issue_assignment_modal}}
</div>

<table>
  <thead>
    <tr>
      <th scope="col">Issue ID</th>
      <th scope="col">Developer ID</th>
    </tr>
  </thead>
  <tbody>
    {{!-- Handlebars building dynamic table from app.get request--}}
    {{#each issue_assignments}}
      {{#if issueID}}
        <tr class="table-issue-assignment">
          <td scope="row" class="table-issue-id">{{issueID}} &nbsp : &nbsp {{name}}</td>
          <td class="table-developer-id">{{developerID}} &nbsp : &nbsp {{firstName}}</td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>

