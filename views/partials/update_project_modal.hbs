<div id="updateProjectModal" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Edit Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="update-form">
          <div class="form-group">
            <label for="modal-update-project-name" class="col-form-label">Project Name:</label>
            <input type="text" class="form-control" id="modal-update-project-name" placeholder="name" required>
          </div>
          <div class="form-group">
            <label for="modal-update-project-description" class="col-form-label">Description:</label>
            <textarea class="form-control" id="modal-update-project-description" placeholder="description" required></textarea>
          </div>
          <div class="form-group">
              <label for="modal-update-project-status">Status (Note: Will be pulled from Status Table)</label>
              <select class="form-control" id="modal-update-project-status" required>
                  <option>...</option>
                  <option>Not Started</option> 
                  <option>In Progress</option>
                  <option>Complete</option>
              </select>
          </div>
          <div class="form-group">
              <label for="modal-update-project-priority">Priority (Note: Will be pulled from Priority Table)</label>
              <select class="form-control" id="modal-update-project-priority" required>
                  <option>...</option> 
                  <option>Low</option> 
                  <option>Medium</option>
                  <option>High</option>
              </select>
          </div>
          <div class="form-group">
              <label for="modal-update-project-start-date">Start Date</label>
              <input type="date" class="form-control" id="modal-update-project-start-date" placeholder="mm/dd/yyyy" required>
          </div>
          <div class="form-group">
              <label for="modal-update-project-end-date">End Date</label>
              <input type="date" class="form-control" id="modal-update-project-end-date" placeholder="mm/dd/yyyy">
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <button id="delete-btn" type="button" class="btn btn-danger delete-btn" >Delete</button>
          <button id="update-btn" type="submit" class="btn btn-primary update-btn">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/scripts/update_project.js"></script>
