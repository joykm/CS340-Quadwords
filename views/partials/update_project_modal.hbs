<div id="updateProjectModal" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Edit Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="update-project-form" class="update-form" action="/projects/update_project" method="post">
          <input type="hidden" id="modal_update_projectID" name="modal_update_projectID" readonly>
          <div class="form-group">
            <label for="modal_update_project_name" class="col-form-label">Project Name:</label>
            <input type="text" class="form-control" id="modal_update_project_name" name="modal_update_project_name" placeholder="name" required>
          </div>
          <div class="form-group">
            <label for="modal_update_project_description" class="col-form-label">Description:</label>
            <textarea class="form-control" id="modal_update_project_description" name="modal_update_project_description" placeholder="description" required></textarea>
          </div>
          <div class="form-group">
              <label for="modal_update_project_status">Status:</label>
              <select class="form-control" id="modal_update_project_status" name="modal_update_project_status">
                  <option></option>
                {{#each statuses}}
                  {{#if statusID}}
                    <option>{{statusID}} &nbsp ({{statusType}})</option> 
                  {{/if}}
                {{/each}}
              </select>
          </div>
          <div class="form-group">
              <label for="modal_update_project_priority">Priority:</label>
              <select class="form-control" id="modal_update_project_priority" name="modal_update_project_priority">
                <option></option> 
                {{#each priorities}}
                  {{#if priorityID}}
                    <option>{{priorityID}} &nbsp ({{priorityType}})</option> 
                  {{/if}}
                {{/each}}
              </select>
          </div>
          <div class="form-group">
              <label for="modal_update_project_start_date">Start Date</label>
              <input type="date" class="form-control" id="modal_update_project_start_date" name="modal_update_project_start_date" placeholder="mm/dd/yyyy" required>
          </div>
          <div class="form-group">
              <label for="modal_update_project_end_date">End Date</label>
              <input type="date" class="form-control" id="modal_update_project_end_date" name="modal_update_project_end_date" placeholder="mm/dd/yyyy">
          </div>
          <div class="modal-footer d-flex justify-content-between">
            <button id="delete-btn" type="button" class="btn btn-danger delete-btn" >Delete</button>
            <button id="update-btn" type="submit" class="btn btn-primary update-btn">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/update_project.js"></script>
