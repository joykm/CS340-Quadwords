<button id="addPriorityBtn" data-target="#addPriorityModal" type="button" class="btn btn-primary add-btn" data-toggle="modal" data-whatever="@getbootstrap" >Add Priority</button>

<div id="addPriorityModal" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Add Priority</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/priorities/add_priority" method="post">
          <div class="form-group">
            <label for="modal_add_priority_type" class="col-form-label">Priority Type:</label>
            <input type="text" class="form-control" id="modal_add_priority_type" name="modal_add_priority_type" placeholder="priority" required>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add Priority</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>