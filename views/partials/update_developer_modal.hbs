<div id="updateDeveloperModal" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Edit Developer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <form class="update-form" action="/developers/update_developer" method="post">
          <input type="hidden" id="modal_update_developerID" name="modal_update_developerID" readonly>
          <div class="form-group">
            <label for="modal_update_first_name" class="col-form-label">First Name:</label>
            <input type="text" class="form-control" id="modal_update_first_name" name="modal_update_first_name"  placeholder="first name" required>
          </div>
          <div class="form-group">
            <label for="modal_update_last_name" class="col-form-label">Last Name:</label>
            <input type="text" class="form-control" id="modal_update_last_name" name="modal_update_last_name" placeholder="last name" required>
          </div>
          <div class="form-group">
            <label for="modal_update_title" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="modal_update_title" name="modal_update_title" placeholder="title" required>
          </div>
          <div class="form-group">
            <label for="modal_update_email" class="col-form-label">Email:</label>
            <input type="text" class="form-control" id="modal_update_email" name="modal_update_email" placeholder="email" required>
          </div>
        
          <div class="modal-footer d-flex justify-content-between">
            <button id="delete-btn" type="button" class="btn btn-danger delete-btn" >Delete</button>
            <button id="update-btn" type="submit" class="btn btn-primary update-btn">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/update_developer.js"></script>
