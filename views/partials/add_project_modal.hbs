<button id="addProjectBtn" data-target="#addProjectModal" type="button" class="btn btn-primary add-btn" data-toggle="modal" data-whatever="@getbootstrap" >Add Project</button>

<div id="addProjectModal" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Add Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="add-project-name" class="col-form-label">Project Name:</label>
            <input type="text" class="form-control" id="add-project-name" placeholder="name">
          </div>
          <div class="form-group">
            <label for="add-project-description" class="col-form-label">Description:</label>
            <textarea class="form-control" id="add-project-description" placeholder="description"></textarea>
          </div>
        </form>
        <div class="form-group">
            <label for="add-project-status">Status (Note: Will be pulled from Status Table)</label>
            <select class="form-control" id="add-project-status">
                <option>...</option>
                <option>Not Started</option> 
                <option>In Progress</option>
                <option>Complete</option>
            </select>
        </div>
        <div class="form-group">
            <label for="add-project-priority">Priority (Note: Will be pulled from Priority Table)</label>
            <select class="form-control" id="add-project-priority">
                <option>...</option> 
                <option>Low</option> 
                <option>Medium</option>
                <option>High</option>
            </select>
        </div>
        <div class="form-group">
            <label for="add-project-start-date">Start Date</label>
            <input type="date" class="form-control" id="add-project-start-date" placeholder="mm/dd/yyyy">
        </div>
        <div class="form-group">
            <label for="add-project-end-date">End Date</label>
            <input type="date" class="form-control" id="add-project-end-date" placeholder="mm/dd/yyyy">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Add Project</button>
      </div>
    </div>
  </div>
</div>

