<div id="updateIssueAssignment" aria-labelledby="exampleLabel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleLabel">Edit Issue Assignment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <form class="update-form" action="/issue_assignments/update_issue_assignment" method="post">
          <input type="hidden" id="modal_update_statusID" name="modal_update_statusID" readonly>
          <div class="form-group">
              <label for="modal_update_issue_assignment_issueID">Issue ID:</label>
              <select class="form-control" id="modal_update_issue_assignment_issueID" name="modal_update_issue_assignment_issueID" required>
                {{!-- <option></option> --}}
                {{#each issues}}
                  {{#if issueID}}
                    <option>{{issueID}} &nbsp : &nbsp {{name}}</option> 
                  {{/if}}
                {{/each}}
              </select>
          </div>
          <div class="form-group">
            <label for="modal_update_issue_assignment_developerID">Developer ID:</label>
              <select class="form-control" id="modal_update_issue_assignment_developerID" name="modal_update_issue_assignment_developerID" required>
                {{!-- <option></option> --}}
                {{#each developers}}
                  {{#if developerID}}
                    <option>{{developerID}} &nbsp : &nbsp {{firstName}}</option> 
                  {{/if}}
                {{/each}}
              </select>
          </div>
        
          <div class="modal-footer d-flex justify-content-between">
            <button id="delete-btn" type="button" class="btn btn-danger delete-btn" >Delete</button>
            <button id="update-btn" type="submit" class="btn btn-primary update-btn">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/update_issue_assignment.js"></script>



