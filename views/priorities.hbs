<h1 class="page-title">Priority Manager</h1>

<div class="page-notes">
  <div>Notes:</div>
  <ul>
      <li>Click the row to update/delete</li>
  </ul> 
</div>

{{!-- Handlebars call to add_project_modal.hbs partial --}}
{{> add_priority_modal}}

<table>
  <thead>
    <tr>
      <th scope="col">Priority ID</th>
      <th scope="col">Priority Type</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-priority">
      <td scope="row">1</td>
      <td class="table-priority-type">Low</td>
    </tr>
    <tr class="table-priority">
      <td scope="row">2</td>
      <td class="table-priority-type">Medium</td>
    </tr>
    <tr class="table-priority">
      <td scope="row">3</td>
      <td class="table-priority-type">High</td>
    </tr>
  </tbody>
</table>

